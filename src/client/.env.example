# PopFi Client Environment Variables

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Monad Testnet RPC URL
VITE_MONAD_RPC_URL=https://testnet-rpc.monad.xyz

# API Base URL (for backend communication)
VITE_API_BASE_URL=http://localhost:8080/api

# WebSocket URL (for real-time game communication)
# VITE_WS_URL=ws://localhost:8080/ws

# ========================================
# Game Server Configuration
# 游戏服务器配置
# ========================================

# 服务器URL (必填)
# Server URL (required)
VITE_GAME_SERVER_URL=http://localhost:3002

# 服务器端口 (可选，如果URL中没有包含端口)
# Server port (optional, if not included in URL)
VITE_GAME_SERVER_PORT=3002

# Socket.IO路径 (可选，默认: /socket.io/)
# Socket.IO path (optional, default: /socket.io/)
VITE_GAME_SERVER_PATH=/socket.io/

# 命名空间 (可选，默认: /)
# Namespace (optional, default: /)
VITE_GAME_SERVER_NAMESPACE=/

# 是否使用安全连接 (可选，默认: false for http, true for https)
# Use secure connection (optional, default: false for http, true for https)
VITE_GAME_SERVER_SECURE=false

# 是否启用重连 (可选，默认: true)
# Enable reconnection (optional, default: true)
VITE_GAME_SERVER_RECONNECTION=true

# 重连尝试次数 (可选，默认: 5 for dev, 10 for prod)
# Reconnection attempts (optional, default: 5 for dev, 10 for prod)
VITE_GAME_SERVER_RECONNECTION_ATTEMPTS=5

# 重连延迟毫秒 (可选，默认: 1000 for dev, 2000 for prod)
# Reconnection delay in milliseconds (optional, default: 1000 for dev, 2000 for prod)
VITE_GAME_SERVER_RECONNECTION_DELAY=1000

# 连接超时毫秒 (可选，默认: 20000 for dev, 30000 for prod)
# Connection timeout in milliseconds (optional, default: 20000 for dev, 30000 for prod)
VITE_GAME_SERVER_TIMEOUT=20000

# 传输方式 (可选，默认: websocket,polling)
# Transport methods (optional, default: websocket,polling)
VITE_GAME_SERVER_TRANSPORTS=websocket,polling

# Contract Addresses (will be populated after deployment)
VITE_BUBBLE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BUBBLE_SKIN_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_GAME_REWARDS_ADDRESS=0x0000000000000000000000000000000000000000
VITE_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
VITE_RANDOM_GENERATOR_ADDRESS=0x0000000000000000000000000000000000000000
VITE_ACCESS_CONTROL_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000

# Development settings
VITE_DEV_MODE=true
VITE_ENABLE_LOGGING=true
