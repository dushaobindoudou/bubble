{
  "name": "bubble-brawl",
  "version": "1.0.0",
  "description": "Bubble Brawl - 泡泡大作战多人在线游戏",
  "main": "server/server.js",
  "scripts": {
    "build": "gulp build",
    "start": "gulp run",
    "watch": "gulp watch",
    "test": "gulp test",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "verify-config": "hardhat run scripts/verify-network-config.js --network localhost",
    "verify-config:monad": "hardhat run scripts/verify-network-config.js --network monadTestnet",
    "verify-config:sepolia": "hardhat run scripts/verify-network-config.js --network sepolia",
    "verify-monad": "hardhat run scripts/verify-monad-network.js --network monadTestnet",
    "deploy": "hardhat run scripts/deploy-all-contracts.js",
    "deploy:local": "hardhat run scripts/deploy-all-contracts.js --network localhost",
    "deploy:monad": "hardhat run scripts/deploy-all-contracts.js --network monadTestnet",
    "deploy:monadTest": "hardhat run scripts/deploy-monad-testnet.js --network monadTestnet",
    "deploy:monad-gas-fix": "hardhat run scripts/deploy-monad-with-gas-fix.js --network monadTestnet",
    "deploy:sepolia": "hardhat run scripts/deploy-all-contracts.js --network sepolia",
    "deploy:test-fix": "hardhat run scripts/deploy-with-timeout-fix.js",
    "test:monad-fix": "hardhat run scripts/test-monad-deployment-fix.js",
    "test:monad-flow": "hardhat run scripts/test-monad-execution-flow.js",
    "check-gas-price": "hardhat run scripts/check-gas-price.js",
    "check-gas-price:monad": "hardhat run scripts/check-gas-price.js --network monadTestnet",
    "test:role-management": "hardhat run scripts/test-role-management.js",
    "test:bubble-token-roles": "hardhat test test/token/BubbleToken.roleManagement.test.js",
    "update-client-contracts": "node scripts/update-client-contracts.js",
    "deploy:monad-with-client": "npm run deploy:monad-gas-fix && npm run update-client-contracts",
    "test:client-auth": "node scripts/test-client-auth.js",
    "serve:client": "node scripts/serve-client.js",
    "node": "hardhat node",
    "console": "hardhat console",
    "console:monad": "hardhat console --network monadTestnet",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dushaobindoudou/bubble.git"
  },
  "author": "dushaobindoudou",
  "maintainers": [
    {
      "name": "dushaobindoudou",
      "email": "dushaobindoudou@gmail.com"
    }
  ],
  "license": "MIT",
  "contributors": [
  ],
  "dependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "dotenv": "^16.5.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "express": "^4.18.2",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^6.0.0",
    "gulp-nodemon": "^2.5.0",
    "gulp-todo": "^7.1.1",
    "jshint": "^2.13.6",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sat": "^0.9.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "webpack": "^5.82.1",
    "webpack-stream": "^7.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.3.0",
    "@types/sat": "^0.0.32",
    "hardhat": "^2.24.2",
    "plugin-error": "^2.0.1"
  }
}
